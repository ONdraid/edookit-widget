<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/upper_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/widget_upper_bg"
        android:paddingLeft="3dp"
        android:paddingTop="3dp"
        android:paddingRight="3dp">

        <ImageButton
            android:id="@+id/edookitButton"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:backgroundTint="#323232"
            android:scaleType="fitCenter"
            android:src="@drawable/edookit_logo"
            android:tint="@color/white"
            tools:ignore="UseAppTint"
            tools:targetApi="lollipop" />

        <ImageButton
            android:id="@+id/refreshButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:backgroundTint="#323232"
            android:scaleType="fitCenter"
            android:src="@drawable/refresh_button"
            android:tint="@color/white"
            tools:ignore="UseAppTint"
            tools:targetApi="lollipop" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upper_widget"
        android:background="@drawable/widget_lower_bg"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingBottom="3dp">

        <ImageView
            android:id="@+id/timetableImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />
    </RelativeLayout>

</RelativeLayout>